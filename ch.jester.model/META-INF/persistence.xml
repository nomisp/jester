<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
    xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"> 
    <persistence-unit name="jester" transaction-type="JTA">
        <description>jester</description>
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:/jesterDataSource</jta-data-source>
        <class>ch.jester.model.Tournament</class>
        <class>ch.jester.model.Category</class>
        <class>ch.jester.model.Round</class>
        <class>ch.jester.model.Pairing</class>
        <class>ch.jester.model.Player</class>
        <class>ch.jester.model.Club</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create" />
            <property name="hibernate.show_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>